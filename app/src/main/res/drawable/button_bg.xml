<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/bright_blue"
                android:startColor="@color/baby_blue"/>
            <stroke
                android:width="7dp"
                android:color="@color/baby_blue"/>
            <corners
                android:radius="7dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/light_orange"/>
            <stroke
                android:width="2dp"
                android:color="@color/darker_orange"/>
            <corners
                android:radius="6dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>