<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size
                android:width="16dp"
                android:height="16dp"/>
            <gradient
                android:angle="270"
                android:endColor="@color/bright_blue"
                android:startColor="@color/baby_blue"/>
            <corners
                android:radius="6dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <size
                android:width="16dp"
                android:height="16dp"/>
            <solid
                android:color="@color/light_orange"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/light_orange_shadow"
                />
            <corners
                android:radius="6dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>